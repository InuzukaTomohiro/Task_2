<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |books| %>
    <tr>
      <td><span><%= books.title %></span></td>
      <td><span><%= books.body %></span></td>

      <td><%= link_to "Show", book_path(books.id) %></td>
      <td><%= link_to "Edit", edit_book_path(books.id) %></td>
      <td><%= link_to "Destroy", book_path(books),method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>


<h2>New book</h2>


  <%= form_with model: @book do %>
  <% if @book.errors.any? %>
  <div id = "errors_display">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
  </div>
  <% end %>
  <% end %>
<%= form_with model: @book,url: '/books',method: :post do |f| %>
<div class="field">
      <label class="create">Title</label>
    </div>
    <div class="text">
        <%= f.text_field :title %>
      </div>
    </div>
  </div>
  <div class="field">
      <label class="create">Body</label>
    </div>
    <div class="text">
        <%= f.text_area :body %>
      </div>
    </div>
  </div>
  <div class="button">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
