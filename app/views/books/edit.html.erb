<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
  <div id = "errors_display">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
  </div>
  <% end %>
  <div class="field">
      <label class="create">Title</label>
    </div>
    <div class="text">
        <%= f.text_field :title %>
      </div>
    </div>
  </div>
  <div class="field">
      <label class="create">Body</label>
    </div>
    <div class="text">
        <%= f.text_area :body %>
      </div>
    </div>
  </div>
  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= form_with model: @book do  %>
  <div class="show">
    <%= link_to "show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
  </div>
<% end %>